# OpenAI API 설정 (Spring AI)
spring:
  ai:
    openai:
      api-key: ${OPENAI_API_KEY:your-openai-api-key-here}
      chat:
        options:
          model: gpt-4o-mini
          temperature: 0.7

# JWT 설정
jwt:
  secret: ${JWT_SECRET:your-super-secret-jwt-key-at-least-256-bits-long}
  expiration: 86400000  # 24시간 (밀리초)
  refresh-expiration: 604800000  # 7일 (밀리초)

